<h1>My list</h1>
<ul class="list-group">
   <% @list.movies.each do |movie| %>
    <li class="list-group-item"><%= movie.title %></li>
    <li class="list-group-item"><%= movie.overview %></li>
    <li class="list-group-item"><%= movie.rating %></li>
    <li class="list-group-item"><img src="<%= movie.poster_url %>" alt="image du film"></li>
     <% movie.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %><%= link_to "Delete a bookmark" , bookmark_path(bookmark),  method: :delete, data: { confirm: "Are you sure?" }%></li>
  <% end %>
  <% end %>
</ul>
<!-- ... -->

<%= link_to "Back to list", root_path %>
<%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>



